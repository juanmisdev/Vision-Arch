---
import { CiCircleCheck } from "react-icons/ci";

interface Props {
    planName: string;
    price: string;
    description: string;
    features: string[];
}

const {planName, price, description, features} = Astro.props;
---

<div
  class="bg-gradient-to-b from-black to-purple-950 rounded-xl shadow-lg shadow-purple-600 px-8 py-7 flex flex-col gap-10 max-w-lg"
>
  <div class="flex flex-col justify-evenly gap-10">
    <p class="text-gray-400 opacity-70 font-semibold text-3xl">{planName}</p>
    <h2 class="text-gray-300 font-extrabold text-6xl">
      ${price}<span class="text-2xl opacity-50">/mo</span>
    </h2>
    <p class="text-gray-300 text-lg opacity-65">
      {description}
    </p>
    
  </div>

  <div class=" ">
    <p class="text-gray-400 opacity-50 font-semibold text-lg text-center mb-7">Caracter√≠sticas</p>
    <ul class="text-gray-400 opacity-90 flex flex-col gap-2 text-xl">
        {features.map((feature) => 
            <li class="flex items-center gap-3"><span class="text-emerald-300"><CiCircleCheck /></span>{feature}</li>)}
    </ul>
    
  </div>
  <button class="bg-emerald-300 rounded-lg shadow-lg shadow-emerald-900 py-2 border border-emerald-100 text-black font-semibold text-xl mt-auto">Empieza con {planName}</button>
  
</div>
