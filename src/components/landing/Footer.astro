import { FaInstagram } from "react-icons/fa";
import { FaFacebook } from "react-icons/fa";
---
<footer class="p-20 bg-gradient-to-b from-emerald-950 to-black border-t border-emerald-300">
    <div>
        <div class="flex justify-between w-3/4 mx-auto">
            <div>
                <h3 class="text-white video-game text-xl">VISION-<span class="text-emerald-300">ARCH</span></h3>
            </div>
            <div class="flex gap-5">
                <a href="" class="text-teal-400 font-thin opacity-60">Acerca de Nosotros</a>
                <a href="" class="text-teal-400 font-thin opacity-60">Contacto</a>
                <a href="" class="text-teal-400 font-thin opacity-60">Politicas de Privacidad</a>
            </div>
        </div>
        <div>
            <div class="w-3/4 flex justify-between mx-auto mt-20">
                <div>
                    <p class="text-teal-400 font-bold opacity-60">©2024 VISION-ARCH</p>
                    <p class="text-teal-400 font-bold opacity-60">Diseño - Juan Miguel Lopez.</p>
                </div>
                <div class="flex items-center gap-3">
                    <p class="text-white font-bold ">Redes Sociales:</p>
                    <a href="" class="text-emerald-300"><FaWhatsapp size={24}/></a>
                    <a href="" class="text-pink-500"><FaInstagram size={24}/></a>
